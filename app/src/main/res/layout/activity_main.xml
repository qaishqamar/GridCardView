<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="3"
                android:background="@android:color/background_light"
        >
            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/cv1"

                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground">
                <ImageView android:layout_width="145dp"
                           android:layout_height="145dp"
                           android:src="@drawable/githublogo"
                />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/cv2"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground">
                <ImageView android:layout_width="145dp"
                           android:layout_height="145dp"
                           android:src="@drawable/fblogo"
                />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/cv3"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground">
                <ImageView android:layout_width="145dp"
                           android:layout_height="145dp"
                           android:src="@drawable/flipcartlogo"
                />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/cv4"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground">
                <ImageView android:layout_width="145dp"
                           android:layout_height="145dp"
                           android:src="@drawable/snapdeallogo"
                />


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/cv5"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground">
                <ImageView android:layout_width="145dp"
                           android:layout_height="145dp"
                           android:src="@drawable/olxlogo"
                />


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/cv6"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground">
                <ImageView android:layout_width="145dp"
                           android:layout_height="145dp"
                           android:src="@drawable/marwarilogo"
                />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/cv7"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground">
                <ImageView android:layout_width="145dp"
                           android:layout_height="145dp"
                           android:src="@drawable/twiterlogo"
                />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/cv8"
                    app:cardElevation="15dp"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground">
                <ImageView android:layout_width="145dp"
                           android:layout_height="145dp"
                           android:src="@drawable/instagramlogo"
                />

            </android.support.v7.widget.CardView>
        </GridLayout>
    </ScrollView>
</LinearLayout>